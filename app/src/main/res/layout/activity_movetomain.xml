<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/orange"
    tools:context=".movetomain">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_edittext">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Rotaractor"
                    android:id="@+id/Welcomertr"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/purple"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/Rtrjourney"
                    android:drawableLeft="@drawable/baseline_play_arrow_24_1"
                    android:text="Rotaract Journey"
                    android:textSize="17sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius = "20dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/Duefees"
                    android:drawableLeft="@drawable/baseline_play_arrow_24_1"
                    android:text="Due fees"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius = "20dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/Upcomingevts"
                    android:drawableLeft="@drawable/baseline_play_arrow_24_1"
                    android:text="Upcoming Events"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius = "20dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/attend"
                    android:drawableLeft="@drawable/baseline_play_arrow_24_1"
                    android:text="Attendence"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius = "20dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/plat"
                    android:drawableLeft="@drawable/baseline_play_arrow_24_1"
                    android:background="@drawable/button_style_new"
                    android:text="Platinum Membership"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius = "20dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>